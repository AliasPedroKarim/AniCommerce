{% extends 'base.html.twig' %}

{% block title %}Verification Invalide - {{ parent() }}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">

			<div class="jumbotron mt-5 w-100">
				<h1 class="display-4">Erreur</h1>
				<p class="lead">Une erreur s'est produit !</p>
				<hr class="my-4">
				<p> {{ message }} </p>
				{% if link %}
					<a class="btn btn-primary btn-lg" href="{{ link }}" role="button">{{ text_link }}</a>
				{% endif %}
			</div>

		</div>
	</div>
{% endblock %}

