{% extends 'base.html.twig' %}

{% block title %}Magasins - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            {% for magasin in magasins %}

                <div class="col-md-4 ">
                    <div class="card m-3 shadow-3dp bg-light">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ magasin.nom }}
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ magasin.courriel }}</h6>
                            <p class="card-text">
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi eum facere ipsam, quasi quo ut.
                            </p>
                            <a href="{{ path('magasin_show', { 'id': magasin.id }) }}" class="card-link">Voir le magasin</a>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>

    </div>
{% endblock %}
